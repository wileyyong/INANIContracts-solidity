{
  "name": "solidity-excercise",
  "version": "0.0.3",
  "description": "Creating Solidity smart contract with TypeScript testing",
  "private": true,
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/parsaaba/solidityexercise"
  },
  "keywords": [],
  "author": "",
  "license": "Apache-2.0",
  "scripts": {
    "build": "hardhat compile",
    "clean": "hardhat clean",
    "format": "npm run format-ts && npm run format-sol",
    "format-sol": "prettier --ignore-unknown --write contracts",
    "format-ts": "prettier --ignore-unknown --write \"**/*.ts\"",
    "lint": "npm run lint-ts && npm run lint-sol",
    "lint-ts": "eslint . --ext .ts",
    "lint-sol": "solhint ./contracts/**/*.sol",
    "plant": "npx node-plantuml ./docs/specs",
    "prepare": "husky install",
    "test": "mocha --timeout 10000 --exit --recursive --require ts-node/register test/**/*.test.ts"
  },
  "devDependencies": {
    "@chainlink/contracts": "^0.5.1",
    "@nomiclabs/hardhat-ethers": "^2.0.4",
    "@nomiclabs/hardhat-waffle": "^2.0.2",
    "@openzeppelin/contracts": "^4.4.2",
    "@openzeppelin/contracts-upgradeable": "^4.4.2",
    "@openzeppelin/hardhat-upgrades": "^1.14.0",
    "@typechain/ethers-v5": "^9.0.0",
    "@typechain/hardhat": "^4.0.0",
    "@types/bunyan": "^1.8.7",
    "@types/chai": "^4.2.21",
    "@types/chai-as-promised": "^7.1.4",
    "@types/mocha": "9.1.0",
    "@types/node": "^17.0.6",
    "@typescript-eslint/eslint-plugin": "5.10.2",
    "@typescript-eslint/parser": "5.10.2",
    "chai": "4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "5.5.4",
    "hardhat": "2.8.3",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-gas-reporter": "^1.0.9",
    "husky": "^7.0.2",
    "lint-staged": "12.3.3",
    "mocha": "9.2.0",
    "prettier": "^2.5.0",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.6",
    "ts-node": "^10.2.1",
    "typechain": "^7.0.0",
    "typescript": "4.5.5"
  },
  "dependencies": {
    "bunyan": "^1.8.15",
    "dotenv": "^16.0.3"
  }
}
